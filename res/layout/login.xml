<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3c4953"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ModuleCloud" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4" >

            <ImageView
                android:layout_width="133.2dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/ico_cloud" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Module Cloud Sample App"
                android:gravity="center"
                android:textColor="#e5ffffff"
                android:textSize="20sp" />

            <Button
                android:layout_width="160dp"
                android:layout_height="33dp"
                android:onClick="settingwifi"
                android:text="Setting WiFi"
                android:background="@drawable/btn_option_2_du"
                android:layout_marginTop="15dp"
                android:textColor="#e5ffffff"
                android:layout_gravity="center"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2" >

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="true"
                android:hint="User ID"
                android:text="@string/user_name"
                android:singleLine="true"
                android:background="@drawable/txt_field_n"
                android:textColor="#e5ffffff" />

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="true"
                android:hint="User Password"
                android:inputType="textPassword"
                android:text="@string/user_password"
                android:singleLine="true"
                android:background="@drawable/txt_field_n"
                android:layout_marginTop="3dp"
                android:textColor="#e5ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="registration"
                    android:text="Register"
                    android:layout_weight="20"
                    android:background="@drawable/btn_submit_du"
                    android:textColor="#e5ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:onClick="login"
                    android:text="Login"
                    android:layout_weight="20"
                    android:background="@drawable/btn_submit_du"
                    android:textColor="#e5ffffff"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_setting_du"
                android:onClick="configuration"
                android:layout_gravity="right" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

